{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module":"es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/lib",
    "removeComments": true,
    "target": "es2017",
    "strict": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "src"
  ]
}
